{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend API service",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'tsx' src/index.ts",
    "build": "rm -rf ./dist && tsc",
    "start": "node dist/index.js",
    "migrate:latest": "knex --knexfile src/db/knexfile.ts migrate:latest",
    "migrate:up": "knex --knexfile src/db/knexfile.ts migrate:up",
    "migrate:down": "knex --knexfile src/db/knexfile.ts migrate:rollback",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down -v",
    "db:logs": "docker-compose logs -f",
    "db:restart": "npm run db:down && npm run db:up"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "js-yaml": "^4.1.1",
    "knex": "^3.1.0",
    "mysql2": "^3.11.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "nodemon": "^3.1.9",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
